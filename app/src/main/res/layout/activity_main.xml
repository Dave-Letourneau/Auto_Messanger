
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:debuggable="true"
    android:background="@drawable/autotwo">

    <TextView
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/msgDisplay"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:textColor="#ff000000"
        android:text="@string/msgValue"
        android:background="#ff1960b0" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changeMsg"
        android:id="@+id/changeButton"
        android:onClick="changeMsgClick"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/checkBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff1960b0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onMsg"
        android:id="@+id/checkBox"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:clickable="true"
        android:onClick="itemClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Session"
        android:id="@+id/sessionButton"
        android:layout_alignTop="@+id/checkBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onSessionClear"
        android:background="#ff1960b0" />


</RelativeLayout>
